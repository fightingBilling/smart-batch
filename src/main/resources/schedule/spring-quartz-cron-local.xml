<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-lazy-init="true">

	<description>Quartz的本地Cron式执行任务配置</description>

	<!-- Quartz本地Schduler -->
	<bean id="localQuartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<!-- Triggers集成 -->
		<property name="triggers">
			<list>
				<ref bean="dayCutoffCronTrigger" />
				<ref bean="dayEndCronTrigger" />
				<ref bean="routineAccountDelayCronTrigger" />
				<ref bean="tranchkCronTrigger" />
			</list>
		</property>
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.threadCount">5</prop>
				<prop key="org.quartz.scheduler.skipUpdateCheck">true</prop>
			</props>
		</property>
	</bean>

	<!-- ##############################触发器定义############################### -->

	<!-- 日切Cron Trigger定义 -->
	<bean id="dayCutoffCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="dayCutoffJobDetail" />
		<!-- 每天晚上23:55触发 -->
		<property name="cronExpression" value="0 55 23 ? * *" />
	</bean>
	
	
	<!-- 日终Cron Trigger定义 -->
	<bean id="dayEndCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="dayEndJobDetail" />		
		<!-- 每天凌晨1:00触发 -->
		<property name="cronExpression" value="0 0 1 ? * *" />
	</bean>
	
	
	<!-- 常规-T+0延时入账Cron Trigger定义  -->
	<bean id="routineAccountDelayCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="routineAccountDelayJobDetail" />
		<!-- 每10分钟触发一次 -->
		<property name="cronExpression" value="0 0/10 * ? * *" />
	</bean>
	
	<!-- 系统间对账，公司对账文件生成 Trigger定义  -->
	<bean id="tranchkCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="tranchkJobDetail" />
		<!-- 每天凌晨2:00触发 -->
		<property name="cronExpression" value="0 0 2 ? * *" />
	</bean>

	<!-- ##############################Job Detail Bean############################### -->

	<!-- 日切 -->
	<bean id="dayCutoffJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="dayCutoffAction" />
		<property name="targetMethod" value="doDayCutoffJobDetails" />	
	</bean>
	
	<bean id="dayCutoffAction" class="com.ips.bacs.schedule.daycutoff.action.DayCutoffAction"/>
	
	
	<!-- 日终 -->
	<bean id="dayEndJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="dayEndAction" />
		<property name="targetMethod" value="doDayEndJobDetails" />	
	</bean>

	<bean id="dayEndAction" class="com.ips.bacs.schedule.dayend.action.DayEndAction"/>
	
	<!-- 常规-T+0延时入账 -->
	<bean id="routineAccountDelayJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="routineAccountDelayAction" />
		<property name="targetMethod" value="doRoutineAccountDelayJobDetails" />	
	</bean>
	
	<!-- 系统对账 -->
	<bean id="tranchkJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="tranchkAction" />
		<property name="targetMethod" value="doTranChkJobDetails" />	
	</bean>

	<bean id="routineAccountDelayAction" class="com.ips.bacs.schedule.routine.action.RoutineAccountDelayAction"/>
	<bean id="tranchkAction" class="com.ips.bacs.schedule.tranchk.TranChkAction"/>
</beans>
