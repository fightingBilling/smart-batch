<configuration>
	<property name="log.base" value="/var/bacs/logs/bacs" />
	<property name="pattern"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceNo}] %-5level [%thread] %logger{80} :%msg%n" />

	<!-- 批量 -->
	<appender name="batch"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.base}/bacs-batch-quartz.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.base}/%d{yyyy-MM-dd}/bacs-batch-quartz-%i.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
			<maxHistory>20</maxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>20MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
	</appender>

	<!-- batch root -->
	<appender name="batch-root"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.base}/bacs-batch-root-quartz.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.base}/%d{yyyy-MM-dd}/bacs-batch-root-quartz-%i.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
			<maxHistory>20</maxHistory>
			<TimeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>20MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
	</appender>
	
	
	<logger name="com.somnus.smart.batch" level="debug" additivity="false">
		<appender-ref ref="batch" />
	</logger>
	
	<logger name="com.somnus.smart.schedule" level="trace" additivity="false">
	 	<appender-ref ref="batch"/>
	</logger>
	
	<logger name="org.apache.ibatis.logging.slf4j" level="debug" additivity="false">
		<appender-ref ref="batch"/>
	</logger>

	<logger name="org.springframework.jdbc.datasource" level="debug" additivity="false">
		<appender-ref ref="batch"/>
	</logger>
	
	<logger name="org.mybatis.spring.transaction" level="debug" additivity="false">
		<appender-ref ref="batch"/>
	</logger>
	
	<logger name="org.jdbcdslog" level="info" additivity="false">
		<appender-ref ref="batch"/>
	</logger>

	<!-- root级别控制 -->
	<root level="INFO">
		<appender-ref ref="batch-root" />
	</root>
</configuration>  
